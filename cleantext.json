{
  "name": "Clean text",
  "id_name": "clean-text",
  "category" : "Clean",
  "icon": "clean",
  "description": "Remove unwanted characters from select columns.",
  "help_url":"modules/clean/clean-text",
  "parameters": [
    {
      "name": "",
      "id_name": "colnames",
      "type": "multicolumn",
      "column_types": [ "text" ]
    },
    {
      "name": "Spaces",
      "id_name": "type_space",
      "type": "menu",
      "options": [
        { "value": "trim_around", "label": "Trim around value" },
        { "value": "trim_before", "label": "Trim before value" },
        { "value": "trim_after", "label": "Trim after value" },
        { "value": "remove_all", "label": "Remove all spaces" },
        { "value": "nop", "label": "Leave as is" }
      ],
      "default": "trim_around"
    },
    {
      "name": "Condense spaces",
      "id_name": "condense",
      "type": "checkbox",
      "default": true,
      "visible_if": {
        "id_name": "type_space",
        "value": ["remove_all"],
        "invert": true
      }
    },
    {
      "name": "Capitalization",
      "id_name": "type_caps",
      "type": "menu",
      "options": [
        { "value":"nop", "label":"Leave as is" },
        { "value":"upper", "label":"Uppercase" },
        { "value":"lower", "label":"Lowercase" }
      ],
      "default": "nop"
    },
    {
      "name": "Characters",
      "id_name": "type_char_label",
      "type":"statictext"
    },  
    {
      "name": "Letters",
      "id_name": "letter",
      "type": "checkbox",
      "default": false
    },
    {
      "name": "Numbers",
      "id_name": "number",
      "type": "checkbox",
      "default": false
    },
    {
      "name": "Punctuation",
      "id_name": "punc",
      "type": "checkbox",
      "default": false
    },
    {
      "name": "Custom",
      "id_name": "custom",
      "type": "checkbox",
      "default": false
    },
    {
      "name": "",
      "id_name": "chars",
      "type": "string",
      "placeholder": "%&*)",
      "visible_if": {
        "id_name": "custom",
        "value": true
      }
    },
    {
      "name": "Characters",
      "id_name": "type_char",
      "type": "radio",
      "options": [
        { "value":true, "label":"Keep" },
        { "value":false, "label":"Delete" }
      ],
      "default": false
    }
  ]
}
